{
  "name": "recipe-finder",
  "version": "1.0.0",
  "description": "A recipe finder application using TheMealDB API",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js & npm run watch:css",
    "test": "jest",
    "build:css": "tailwindcss -i ./src/public/css/style.css -o ./src/public/css/output.css",
    "watch:css": "tailwindcss -i ./src/public/css/style.css -o ./src/public/css/output.css --watch"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "mongoose": "^7.8.7",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
}
